<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id appxml="config/app/META-INF/application-no-war.xml">single</id>
	<formats>
		<format>ear</format>
	</formats>
<!-- 	<appxml>config/app/META-INF/application-no-war.xml</appxml> -->
	<baseDirectory>/</baseDirectory>
	<fileSets>
		<fileSet>
			<directory>config/app</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
			<excludes>
				<exclude>**/application*.xml</exclude>
			</excludes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/${project.build.finalName}</directory>
			<outputDirectory>/lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>*:KallsonnysOMS-Security:*</include>
				<include>KallsonnysOMS-Security</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
