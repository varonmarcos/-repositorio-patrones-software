<?xml version="1.0" encoding="UTF-8"?>
<!-- Configures the Camel Context -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:camel="http://camel.apache.org/schema/spring"
	xmlns:cxf="http://camel.apache.org/schema/cxf"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd">

	<cxf:cxfEndpoint id="ProductServicesEndpoint"
		address="http://localhost:8181/cxf/ProductServicesWS" endpointName="s:ProductServicesSOAP"
		serviceName="s:ProductServices" wsdlURL="http://localhost:8181/cxf/ProductServicesWS?wsdl"
		xmlns:s="http://kallsonys.integration.com/productservices">
		<cxf:properties>
			<entry key="dataFormat" value="PAYLOAD" />
		</cxf:properties>
	</cxf:cxfEndpoint>

	<cxf:cxfEndpoint id="CustomerServicesEndpoint"
		address="http://localhost:8181/cxf/CustomerServicesWS" endpointName="s:CustomerServicesSOAP"
		serviceName="s:CustomerServices" wsdlURL="http://localhost:8181/cxf/CustomerServicesWS?wsdl"
		xmlns:s="http://kallsonys.integration.com/customerservices">
		<cxf:properties>
			<entry key="dataFormat" value="PAYLOAD" />
		</cxf:properties>
	</cxf:cxfEndpoint>
	
	<cxf:cxfEndpoint id="CampaignServicesEndpoint"
		address="http://localhost:8181/cxf/CampaignServicesWS" endpointName="s:CampaignServicesSOAP"
		serviceName="s:CampaignServices" wsdlURL="http://localhost:8181/cxf/CampaignServicesWS?wsdl"
		xmlns:s="http://kallsonys.integration.com/campaignservices">
		<cxf:properties>
			<entry key="dataFormat" value="PAYLOAD" />
		</cxf:properties>
	</cxf:cxfEndpoint>
	

	<cxf:cxfEndpoint id="CustomerServicesOMSEndpoint"
		address="http://localhost:8080/KallsonnysOMS-WS/CustomerServices"
		endpointName="s:CustomerServicesSOAP" serviceName="s:CustomerServices"
		wsdlURL="http://localhost:8080/KallsonnysOMS-WS/CustomerServices?wsdl"
		xmlns:s="http://ws.oms.kallsonys.org/customerservices">
		<cxf:properties>
			<entry key="dataFormat" value="PAYLOAD" />
		</cxf:properties>
	</cxf:cxfEndpoint>

	<cxf:cxfEndpoint id="ProductServicesOMSEndpoint"
		address="http://localhost:8080/KallsonnysOMS-WS/ProductServices"
		endpointName="s:ProductServicesSOAP" serviceName="s:ProductServices"
		wsdlURL="http://localhost:8080/KallsonnysOMS-WS/ProductServices?wsdl"
		xmlns:s="http://ws.oms.kallsonys.org/productservices">
		<cxf:properties>
			<entry key="dataFormat" value="PAYLOAD" />
		</cxf:properties>
	</cxf:cxfEndpoint>
	
	<cxf:cxfEndpoint id="CampaignServicesOMSEndpoint"
		address="http://localhost:8080/KallsonnysOMS-WS/CampaignServices"
		endpointName="s:CampaignServicesSOAP" serviceName="s:CampaignServices"
		wsdlURL="http://localhost:8080/KallsonnysOMS-WS/CampaignServices?wsdl"
		xmlns:s="http://ws.oms.kallsonys.org/campaignservices">
		<cxf:properties>
			<entry key="dataFormat" value="PAYLOAD" />
		</cxf:properties>
	</cxf:cxfEndpoint>


	<bean id="authException" class="java.lang.IllegalArgumentException">
		<constructor-arg index="0"
			value="EL USUARIO NO ESTA AUTORIZADO POR FAVOR INGRESE SUS CREDENCIALES" />
	</bean>

	<camel:camelContext xmlns="http://camel.apache.org/schema/spring">
		<camel:route handleFault="true">

			<camel:from uri="cxf:bean:CustomerServicesEndpoint" />

			<setHeader headerName="operationName">
				<simple>${header.operationName}</simple>
			</setHeader>

			<setHeader headerName="operationNamespace">
				<simple>http://ws.oms.kallsonys.org/customerservices</simple>
			</setHeader>

			<camel:to uri="cxf:bean:CustomerServicesOMSEndpoint" />
		</camel:route>

		<camel:route handleFault="true">

			<camel:from uri="cxf:bean:ProductServicesEndpoint" />

			<!-- <when> -->
			<!-- <simple>${header.klstauthoken} == null</simple> -->
			<!-- <throwException ref="authException" /> -->
			<!-- </when> -->

			<setHeader headerName="operationName">
				<simple>${header.operationName}</simple>
			</setHeader>

			<setHeader headerName="operationNamespace">
				<simple>http://ws.oms.kallsonys.org/productservices</simple>
			</setHeader>

			<camel:to uri="cxf:bean:ProductServicesOMSEndpoint" />

		</camel:route>
		
		<camel:route handleFault="true">

			<camel:from uri="cxf:bean:CampaignServicesEndpoint" />

			<!-- <when> -->
			<!-- <simple>${header.klstauthoken} == null</simple> -->
			<!-- <throwException ref="authException" /> -->
			<!-- </when> -->

			<setHeader headerName="operationName">
				<simple>${header.operationName}</simple>
			</setHeader>

			<setHeader headerName="operationNamespace">
				<simple>http://ws.oms.kallsonys.org/campaignservices</simple>
			</setHeader>

			<camel:to uri="cxf:bean:CampaignServicesOMSEndpoint" />

		</camel:route>
	</camel:camelContext>

</beans>
