<?xml version="1.0" encoding="UTF-8"?>
<!-- Configures the Camel Context -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:camel="http://camel.apache.org/schema/spring"
	xmlns:cxf="http://camel.apache.org/schema/cxf"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd">

	<bean id="cleanHeadersInterceptor"
		class="org.kallsonnys.integration.interceptors.CleanHeadersInterceptor" />


	<!-- Web Services End Point -->
	<cxf:cxfEndpoint id="ProductServicesEndpoint"
		address="http://192.168.0.103:8181/cxf/ProductServicesWS"
		endpointName="s:ProductServicesSOAP" serviceName="s:ProductServices"
		wsdlURL="http://192.168.0.103:8181/cxf/ProductServicesWS?wsdl"
		xmlns:s="http://kallsonys.integration.com/productservices">
		<cxf:properties>
			<entry key="dataFormat" value="PAYLOAD" />
		</cxf:properties>
		<cxf:inInterceptors>
			<ref bean="cleanHeadersInterceptor" />
		</cxf:inInterceptors>
	</cxf:cxfEndpoint>

	<cxf:cxfEndpoint id="CustomerServicesEndpoint"
		address="http://192.168.0.103:8181/cxf/CustomerServicesWS"
		endpointName="s:CustomerServicesSOAP" serviceName="s:CustomerServices"
		wsdlURL="http://192.168.0.103:8181/cxf/CustomerServicesWS?wsdl"
		xmlns:s="http://kallsonys.integration.com/customerservices">
		<cxf:properties>
			<entry key="dataFormat" value="PAYLOAD" />
		</cxf:properties>
		<cxf:inInterceptors>
			<ref bean="cleanHeadersInterceptor" />
		</cxf:inInterceptors>
	</cxf:cxfEndpoint>

	<cxf:cxfEndpoint id="CampaignServicesEndpoint"
		address="http://192.168.0.103:8181/cxf/CampaignServicesWS"
		endpointName="s:CampaignServicesSOAP" serviceName="s:CampaignServices"
		wsdlURL="http://192.168.0.103:8181/cxf/CampaignServicesWS?wsdl"
		xmlns:s="http://kallsonys.integration.com/campaignservices">
		<cxf:properties>
			<entry key="dataFormat" value="PAYLOAD" />
		</cxf:properties>
		<cxf:inInterceptors>
			<ref bean="cleanHeadersInterceptor" />
		</cxf:inInterceptors>
	</cxf:cxfEndpoint>

	<cxf:cxfEndpoint id="OrderServicesEndpoint"
		address="http://192.168.0.103:8181/cxf/OrderServicesWS" endpointName="s:OrderServicesSOAP"
		serviceName="s:OrderServices" wsdlURL="http://192.168.0.103:8181/cxf/OrderServicesWS?wsdl"
		xmlns:s="http://kallsonys.integration.com/orderservices">
		<cxf:properties>
			<entry key="dataFormat" value="PAYLOAD" />
		</cxf:properties>
		<cxf:inInterceptors>
			<ref bean="cleanHeadersInterceptor" />
		</cxf:inInterceptors>
	</cxf:cxfEndpoint>


	<cxf:cxfEndpoint id="CustomerServicesOMSEndpoint"
		address="http://192.168.0.103:8080/KallsonnysOMS-WS/CustomerServices"
		endpointName="s:CustomerServicesSOAP" serviceName="s:CustomerServices"
		wsdlURL="http://192.168.0.103:8080/KallsonnysOMS-WS/CustomerServices?wsdl"
		xmlns:s="http://ws.oms.kallsonys.org/customerservices">
		<cxf:properties>
			<entry key="dataFormat" value="PAYLOAD" />
		</cxf:properties>
	</cxf:cxfEndpoint>

	<cxf:cxfEndpoint id="ProductServicesOMSEndpoint"
		address="http://192.168.0.103:8080/KallsonnysOMS-WS/ProductServices"
		endpointName="s:ProductServicesSOAP" serviceName="s:ProductServices"
		wsdlURL="http://192.168.0.103:8080/KallsonnysOMS-WS/ProductServices?wsdl"
		xmlns:s="http://ws.oms.kallsonys.org/productservices">
		<cxf:properties>
			<entry key="dataFormat" value="PAYLOAD" />
		</cxf:properties>
	</cxf:cxfEndpoint>

	<cxf:cxfEndpoint id="CampaignServicesOMSEndpoint"
		address="http://192.168.0.103:8080/KallsonnysOMS-WS/CampaignServices"
		endpointName="s:CampaignServicesSOAP" serviceName="s:CampaignServices"
		wsdlURL="http://192.168.0.103:8080/KallsonnysOMS-WS/CampaignServices?wsdl"
		xmlns:s="http://ws.oms.kallsonys.org/campaignservices">
		<cxf:properties>
			<entry key="dataFormat" value="PAYLOAD" />
		</cxf:properties>
	</cxf:cxfEndpoint>

	<cxf:cxfEndpoint id="OrderServicesOMSEndpoint"
		address="http://192.168.0.103:8080/KallsonnysOMS-WS/OrderServices"
		endpointName="s:OrderServicesSOAP" serviceName="s:OrderServices"
		wsdlURL="http://192.168.0.103:8080/KallsonnysOMS-WS/OrderServices?wsdl"
		xmlns:s="http://ws.oms.kallsonys.org/orderservices">
		<cxf:properties>
			<entry key="dataFormat" value="PAYLOAD" />
		</cxf:properties>
	</cxf:cxfEndpoint>

</beans>
