<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
          http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="KallsonnysOrders">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/KallsonnysOrdersDS</jta-data-source>
		<mapping-file>META-INF/orm.xml</mapping-file>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />

			<property name="hibernate.hbm2ddl.auto" value="update" />

			<property name="hibernate.search.default.directory_provider"
				value="com.etask.util.search.store.ETaskFSDirectoryProvider" />
			<property name="hibernate.search.default.indexBase" value="LuceneETaskIndex.properties" />
			<property name="hibernate.search.analyzer"
				value="org.apache.lucene.analysis.standard.StandardAnalyzer" />

			<property name="cache.provider_class"
				value="org.hibernate.cache.OptimisticTreeCacheProvider" />
			<property name="hibernate.cache.use_second_level_cache"
				value="true" />
			<property name="hibernate.cache.use_query_cache" value="true" />
			<property name="transaction.manager_lookup_class"
				value="org.hibernate.transaction.JBossTSTransactionManagerLookup" />
			<property name="hibernate.show_sql" value="true" />
			<property name="jboss.entity.manager.jndi.name" value="java:/eTaskApiEM" />
		</properties>
	</persistence-unit>
	
	<persistence-unit name="KallsonnysProducts">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/KallsonnysProducts</jta-data-source>
		<mapping-file>META-INF/orm.xml</mapping-file>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />

			<property name="hibernate.hbm2ddl.auto" value="update" />

			<property name="hibernate.search.default.directory_provider"
				value="com.etask.util.search.store.ETaskFSDirectoryProvider" />
			<property name="hibernate.search.default.indexBase" value="LuceneETaskIndex.properties" />
			<property name="hibernate.search.analyzer"
				value="org.apache.lucene.analysis.standard.StandardAnalyzer" />

			<property name="cache.provider_class"
				value="org.hibernate.cache.OptimisticTreeCacheProvider" />
			<property name="hibernate.cache.use_second_level_cache"
				value="true" />
			<property name="hibernate.cache.use_query_cache" value="true" />
			<property name="transaction.manager_lookup_class"
				value="org.hibernate.transaction.JBossTSTransactionManagerLookup" />
			<property name="hibernate.show_sql" value="true" />
			<property name="jboss.entity.manager.jndi.name" value="java:/eTaskApiEM" />
		</properties>
	</persistence-unit>
</persistence>
